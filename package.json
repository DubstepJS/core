{
  "name": "@dubstep/core",
  "version": "3.5.3",
  "description": "A step runner for scaffolders",
  "author": "Leo Horie",
  "license": "MIT",
  "main": "dist/index.js",
  "files": [
    "dist",
    "src/**/!(*.test).js"
  ],
  "scripts": {
    "upgrade": "yarn upgrade",
    "dev": "npm-watch | grep --invert-match nodemon",
    "build": "tsc",
    "test": "jest",
    "lint": "eslint src/",
    "cover": "jest --coverage",
    "prepare": "tsc"
  },
  "watch": {
    "build": {
      "patterns": [
        "src"
      ],
      "quiet": true
    },
    "test": {
      "patterns": [
        "src"
      ],
      "quiet": true
    }
  },
  "dependencies": {
    "@babel/parser": "^7.1.6",
    "@babel/template": "^7.1.2",
    "@babel/traverse": "^7.1.5",
    "@babel/types": "^7.1.5",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "execa": "^5.1.1",
    "fs-extra": "^10.0.1",
    "globby": "^11.1.0",
    "ini": "^2.0.0",
    "isomorphic-git": "^1.10.3",
    "prettier": "^2.6.1",
    "recast": "^0.20.5"
  },
  "devDependencies": {
    "@babel/cli": "7.17.6",
    "@babel/core": "7.17.8",
    "@babel/eslint-parser": "^7.17.0",
    "@babel/plugin-proposal-object-rest-spread": "7.17.3",
    "@babel/plugin-transform-modules-commonjs": "7.17.7",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-flow": "7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@types/fs-extra": "^9.0.13",
    "@types/jest": "^27.4.1",
    "@types/markdown-it": "^12.2.3",
    "babel-jest": "27.5.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-jest": "^26.1.3",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "27.5.1",
    "markdown-it": "^12.3.2",
    "npm-watch": "0.11.0",
    "typescript": "^4.6.3"
  },
  "babel": {
    "presets": [
      [
        "@babel/preset-env",
        {
          "targets": {
            "node": "current"
          }
        }
      ],
      "@babel/preset-typescript"
    ]
  },
  "jest": {
    "testRegex": "src/.*?.test.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/DubstepJS/core.git"
  },
  "bugs": {
    "url": "https://github.com/DubstepJS/core/issues"
  },
  "homepage": "https://github.com/DubstepJS/core#readme"
}
